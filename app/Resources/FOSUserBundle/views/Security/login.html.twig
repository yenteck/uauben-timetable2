
<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>AUTHENTIFICATION</title>

    <link rel="stylesheet" href="{{ asset('bundles/admin/css/login.css') }}">
</head>
<body>


{% trans_default_domain 'FOSUserBundle' %}



{% block fos_user_content %}

    <div class="login-form">


        <form action="{{ path("fos_user_security_check") }}" method="post" id="login-form">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"  />
            <table>
                <tr>
                    <td colspan="2" class="logo">
                        MYTIMETABLE
                    </td>
                </tr>
                <tr>
                    {% if error %}
                        <td colspan="2">

                            <div class="error-div">{{ error.messageKey|trans(error.messageData, 'security') }}</div>

                        </td>
                    {% endif %}
                </tr>
                <tr>
                    <td><b for="username">{{ 'security.login.username'|trans }}</b></td>
                    <td><input type="text" id="username" name="_username" value="{{ last_username }}" required="required" /></td>
                </tr>

                <tr>
                    <td> <b for="password">{{ 'security.login.password'|trans }}</b></td>
                    <td><input type="password" id="password" name="_password" required="required" /></td>
                </tr>

                <tr>
                    <td>    <b for="remember_me">{{ 'security.login.remember_me'|trans }}</b></td>
                    <td><input type="checkbox" id="remember_me" name="_remember_me" value="on" /></td>
                </tr>
                <tr>
                    <td class="submit-btn" colspan="">
                        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    </td>
                    <td>
                    </td>
                </tr>
            </table>











        </form>
    </div>
{% endblock fos_user_content %}



</body>
</html>

